<% name_id  = "#{prefix}Name" %>
<% start_id = "#{prefix}StartDate" %>
<% end_id   = "#{prefix}EndDate" %>
<% issue_id = "#{prefix}Issue" %>

<div class="schedule-event-info">
  <span class="schedule-event-name" id="<%= prefix %>EventName"></span>
  <span class="schedule-category-name" id="<%= prefix %>CategoryName"></span>
</div>

<div class="form-group">
  <label class="form-label" for="<%= name_id %>">스케줄 이름</label>
  <textarea class="form-input" id="<%= name_id %>" placeholder="스케줄 이름을 입력하세요" required rows="3"></textarea>
  </div>

<div class="form-row">
  <div class="form-group form-group-half">
    <label class="form-label" for="<%= start_id %>">시작일</label>
    <input type="date" class="form-input" id="<%= start_id %>" required>
  </div>
  <div class="form-group form-group-half">
    <label class="form-label" for="<%= end_id %>">종료일</label>
    <input type="date" class="form-input" id="<%= end_id %>" required>
  </div>
</div>

<% if show_duration %>
  <div class="form-group">
    <label class="form-label">기간 설정 (편의 기능)</label>
    <div class="duration-buttons">
      <button type="button" class="duration-btn" data-weeks="1">1주일</button>
      <button type="button" class="duration-btn" data-weeks="2">2주일</button>
      <button type="button" class="duration-btn" data-weeks="3">3주일</button>
      <button type="button" class="duration-btn" data-weeks="4">4주일</button>
      <button type="button" class="duration-btn" data-weeks="5">5주일</button>
      <button type="button" class="duration-btn" data-weeks="6">6주일</button>
    </div>
  </div>
<% end %>

<div class="form-group">
  <label class="form-label" for="<%= issue_id %>">이슈</label>
  <input type="number" class="form-input" id="<%= issue_id %>" placeholder="이슈 번호를 입력하세요 (선택사항)" min="1">
</div>

<% if show_color %>
  <div class="form-group">
    <label class="form-label">색상 설정</label>
    <div class="schedule-color-display">
      <span id="scheduleColorPreview" class="color-preview" style="background-color: #6c757d;"></span>
      <button type="button" class="color-select-btn" id="scheduleColorSelectBtn">색상 선택</button>
      <button type="button" class="reset-color-btn" id="resetScheduleColorBtn" title="카테고리 색상으로 초기화">🔄 초기화</button>
    </div>
  </div>
<% end %>


